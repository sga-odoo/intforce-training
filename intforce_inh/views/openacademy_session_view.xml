<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="session_form" model="ir.ui.view">
            <field name="name">session.form</field>
            <field name="model">openacademy.session</field>
            <field name="inherit_id" ref="intforce.session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[@name='test']" position="inside">
                    <field name="test"/>
                </xpath>
                <!--<field name="instructor_id" position="after">
                    <field name="test"/>
                </field> -->
                <field name="instructor_id" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <!--<field name="instructor_id" position="replace">
                    <field name="instructor_id" required="1"/>
                </field>-->
            </field>
        </record>

    </data>
</odoo>