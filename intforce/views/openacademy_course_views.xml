<?xml version="1.0"?>
<odoo>
    <data>
        <record id="openacademy_course_view_form" model="ir.ui.view">
            <field name="name">openacademy.course.view.form</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
                        <field name="image" widget="image" class="pull-right oe_avatar" />
                        <div class="oe_title oe_left">
                            <h1>
                                <field name="name" placeholder="Course Title" widget="tttt"/>
                            </h1>
                            <label for="responsible" string="Responsible"/>
                            <field name="responsible"/>
                        </div>
                        <group>
                        <field name="upper"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" />
                            </page>
                            <page string="Session">
                                <field name="session_ids" >
                                    <tree string="list">
                                        <field name="name"></field>
                                        <field name="course_id"></field>
                                        <field name="state"></field>
                                        <field name="instructor_id"></field>
                                    </tree>
                                </field>
                            </page>
                            <page string="Html">
                                <field name="html" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="openacademy_course_view_tree" model="ir.ui.view">
            <field name="name">openacademy.course.view.tree</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <tree string="Openacademy Course">
                    <field name="name" placeholder="Course Title"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="openacademy_course_action" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Open Academy" id="menu_root"/>
        <menuitem name="General" id="menu_general" parent="menu_root"/>
        <menuitem name="Courses" id="menu_courses" parent="menu_general" action="openacademy_course_action"/>

    </data>
</odoo>